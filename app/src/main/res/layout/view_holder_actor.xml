<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/gap_half_8dp"
    android:background="@color/background_black">

    <ImageView
        android:id="@+id/iv_cast_photo"
        android:layout_width="@dimen/cast_actor_photo_80dp"
        android:layout_height="@dimen/cast_actor_photo_80dp"
        android:contentDescription="@string/not_available"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_chris_h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_cast_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_quarter_4dp"
        android:text="@string/not_available"
        android:textColor="@color/white_cast_names"
        android:textSize="@dimen/size_base_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_cast_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>